{
  "name": "plat-lui-exception-config-service",
  "version": "0.0.1",
  "description": "",
  "main": "index.js",
  "author": "",
  "license": "MIT",
  "scripts": {
    "prebuild": "rimraf dist",
    "quality-test": "npm run lint && npm run prettier && npm run test-coverage",
    "quality": "npm run lint:fix && npm run format && npm run test-coverage && npm run build && npm run lint",
    "nest:build": "nest build",
    "tslint-check": "tslint-config-prettier-check ./tslint.json",
    "prettier": "prettier --check \"apps/**/*.ts\"",
    "format": "prettier --write \"apps/**/*.ts\"",
    "start": "cross-env NODE_ENV=development nest start",
    "start:dev": "cross-env NODE_ENV=development nest start --watch",
    "start:debug": "cross-env NODE_ENV=development nest start --debug --watch",
    "start:prod": "node dist/apps/api/main",
    "lint": "tslint -p tsconfig.json -c tslint.json 'apps/**/*.ts?(x)'",
    "lint:fix": "tslint -p tsconfig.json -c tslint.json --fix 'apps/**/*.ts?(x)'",
    "test": "cross-env NODE_ENV=test jest",
    "test:watch": "cross-env NODE_ENV=test jest --watch",
    "test-coverage": "cross-env NODE_ENV=test jest --coverage --detectOpenHandles --forceExit",
    "test:debug": "cross-env NODE_ENV=test node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "cross-env NODE_ENV=test jest --config ./apps/api/test/jest-e2e.json",
    "build": "ncc build ./apps/api/src/main.ts --source-map"
  },
  "dependencies": {
    "@algoan/nestjs-pagination": "^2.0.0",
    "@cloudnative/health-connect": "^2.1.0",
    "@golevelup/nestjs-testing": "^0.1.2",
    "@nestjs/common": "^6.11.11",
    "@nestjs/config": "^0.4.0",
    "@nestjs/core": "^6.11.6",
    "@nestjs/mongoose": "^6.4.0",
    "@nestjs/passport": "^7.0.0",
    "@nestjs/platform-express": "^6.7.2",
    "@nestjs/swagger": "^4.3.2",
    "@types/mongoose": "^5.7.8",
    "@types/mongoose-paginate": "^5.0.8",
    "@zeit/ncc": "^0.22.1",
    "class-transformer": "^0.2.3",
    "class-validator": "^0.11.0",
    "cors": "^2.8.5",
    "cross-env": "^7.0.2",
    "express-actuator": "^1.5.0",
    "faker": "^4.1.0",
    "jest-mock-extended": "^1.0.15",
    "mongodb-memory-server": "^6.6.3",
    "mongoose": "^5.12.10",
    "mongoose-paginate-v2": "^1.3.18",
    "passport": "^0.4.1",
    "passport-azure-ad": "^4.2.1",
    "passport-mock-strategy": "^2.0.0",
    "reflect-metadata": "^0.1.13",
    "rimraf": "^3.0.0",
    "role-acl": "^4.4.0",
    "rxjs": "^6.5.3",
    "swagger-ui-express": "^4.1.4",
    "winston": "^3.2.1",
    "winston-daily-rotate-file": "^4.4.2",
    "winston-transport": "^4.3.0",
    "yamljs": "^0.3.0"
  },
  "devDependencies": {
    "@nestjs/cli": "^6.9.0",
    "@nestjs/schematics": "^6.7.0",
    "@nestjs/testing": "^6.7.1",
    "@types/express": "^4.17.1",
    "@types/express-actuator": "^1.3.0",
    "@types/jest": "^24.0.18",
    "@types/node": "^12.7.5",
    "@types/supertest": "^2.0.8",
    "@types/yamljs": "^0.2.31",
    "jest": "^26.5.6",
    "jsontokens": "^3.0.0",
    "prettier": "^1.18.2",
    "supertest": "^4.0.2",
    "ts-jest": "^26.0.0",
    "ts-loader": "^6.1.1",
    "ts-node": "^8.4.1",
    "tsconfig-paths": "^3.9.0",
    "tslint": "^5.20.1",
    "tslint-config-prettier": "^1.18.0",
    "typescript": "^3.6.3"
  },
  "jest": {
    "moduleFileExtensions": [
      "js",
      "json",
      "ts"
    ],
    "coverageThreshold": {
      "global": {
        "branches": 90,
        "functions": 90,
        "lines": 90,
        "statements": 90
      }
    },
    "rootDir": ".",
    "testRegex": ".spec.ts$",
    "transform": {
      "^.+\\.(t|j)s$": "ts-jest"
    },
    "coverageDirectory": "./coverage",
    "testEnvironment": "node",
    "roots": [
      "<rootDir>/apps/"
    ]
  }
}
